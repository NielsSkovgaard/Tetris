<Window x:Class="Tetris.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        xmlns:ui="clr-namespace:Tetris.UI"
        mc:Ignorable="d"
        Title="Tetris"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        KeyDown="MainWindow_OnKeyDown"
        KeyUp="MainWindow_OnKeyUp"
        WindowStartupLocation="CenterScreen"
        d:DesignHeight="560"
        d:DesignWidth="417">
    <Grid x:Name="Grid1">
        <Grid x:Name="Grid2" Background="LightGray"/>
        <Rectangle x:Name="RectangleOverlay" Fill="Black" Opacity="0.8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
        <ui:HighScoreInputUserControl x:Name="HighScoreInputUserControl1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
        <ui:GameOverUserControl x:Name="GameOverUserControl1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
    </Grid>
</Window>
