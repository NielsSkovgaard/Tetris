<UserControl x:Class="Tetris.Views.ButtonsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tetris.Views"
             mc:Ignorable="d" 
             d:DesignHeight="65" Width="120">
    <Grid Height="65" Width="120">
        <Button x:Name="ButtonNewGame" Content="New Game" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" FontSize="11" FontFamily="Consolas, Courier New" Height="20" Focusable="False"/>
        <Button x:Name="ButtonPauseResume" Content="Pause" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Width="75" FontSize="11" FontFamily="Consolas, Courier New" Height="20" Focusable="False"/>
    </Grid>
</UserControl>
